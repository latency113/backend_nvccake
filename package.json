{
  "name": "backend_cake",
  "version": "1.0.50",
  "module": "src/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build.ts",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun --watch test",
    "test:coverage": "bun test --coverage",
    "lint": "bun x --bun biome lint",
    "db:migrate": "bun x prisma migrate dev",
    "prepare": "husky install",
    "commit": "cz"

  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "elysia": "latest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "^20.0.0",
    "bun-types": "latest",
    "commitizen": "^4.3.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-customizable": "^7.5.1",
    "husky": "^8.0.0",
    "prisma": "^6.16.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  }
  
}
